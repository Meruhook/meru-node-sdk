# Meru SDK Configuration
# Copy this file to .env and fill in your actual values

# Required: Your Meru API token
MERU_API_TOKEN=your-api-token-here

# Optional: Custom API endpoint (defaults to https://api.meruhook.com)
MERU_BASE_URL=https://api.meruhook.com

# Required for address creation: Your webhook URL
WEBHOOK_URL=https://your-app.com/webhook

# Optional: Enable debug logging (true/false)
DEBUG=false

# Optional: Custom timeout in milliseconds
TIMEOUT=30000

# Environment (development/staging/production)
NODE_ENV=development